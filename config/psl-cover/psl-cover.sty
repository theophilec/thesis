%% Front PSL cover
\newcommand*{\pslfrontcover}{
  \begin{pslfontenv}
    \thispagestyle{empty}
    \begin{tikzpicture}[overlay, remember picture,
      text centered, align=center]

      %% background PSL logo
      \node[on background layer]
      at (current page.center) {\includegraphics{\@pslassetspath/front-bg.jpg}};

      %% node origin
      \coordinate (o) at (current page.center);
      \coordinate[yshift=-0mm] (o2) at (o);
      
      %% institute
      \node[xshift=-86mm, yshift=75mm, anchor=north west] at (o) {
        \begin{minipage}[h]{.45\paperwidth}
          \color{pslblue}
          \fontsize{14}{17}\selectfont
          Pr\'{e}par\'{e}e \`{a} \@institute{}\unskip\strut\par
          \if@cotutelle
          Dans le cadre d'une cotutelle avec \@otherinstitute{}\unskip\strut\par
          \fi
        \end{minipage}
      };

      %% thesis title
      \if@cotutelle
      \node[yshift=0mm] at (o2) {
        \begin{minipage}[h]{.85\paperwidth}
          \centering
          \fontsize{18}{22}\selectfont
          \textbf{\@title{}}\unskip\strut\par
          \vspace{5mm}
          \color{pslblue}
          \@entitle{}\unskip\strut\par
        \end{minipage}
      };
      \else
      \node[yshift=31mm] at (o2) {
        \begin{minipage}[h]{.85\paperwidth}
          \centering
          \fontsize{18}{22}\selectfont
          \textbf{\@title{}}\unskip\strut\par
        \end{minipage}
      };
      \fi
        
        \coordinate[yshift = 10mm] (o3) at (o2);

      %% author
      \node[xshift=-86mm, yshift=-8mm, anchor=north west] (autho) at (o3) {
        \begin{minipage}[h]{.3\paperwidth}
          \pslbluelabel{Soutenue par}\unskip\strut\par
          \vspace{1mm}
          {\fontsize{16}{19}\selectfont\textbf{\@author{}}}\unskip\strut\par
          \vspace{1mm}
          {\fontsize{12}{15}\selectfont Le \@date{}}\unskip\strut\par
        \end{minipage}
      };

      %% doctoral school
      \node[xshift=0mm, yshift=-7mm, anchor=north west] (docsc) at (autho.south west) {
        \begin{minipage}[h]{.3\paperwidth}
          \pslbluelabel{\'{E}cole doctorale n\textsuperscript{o}\@doctoralschoolnumber{}}
          \unskip\strut\par
            \vspace{1mm}
            \begin{flushleft} \unskip
            {\fontsize{14}{17}\selectfont\textbf{\@doctoralschoolname{}}}
            \end{flushleft} 
        \end{minipage}
      };

      %% doctoral specialty
      \node[xshift=0mm, yshift=-7mm, anchor=north west] (docspe) at (docsc.south west) {
        \begin{minipage}[h]{.3\paperwidth}
          \pslbluelabel{Sp\'{e}cialit\'{e}}
          \unskip\strut\par
          \vspace{1mm}
          {\fontsize{14}{17}\selectfont\textbf{\@specialty{}}}
        \end{minipage}
      };

      %% labo
      \node[xshift=0mm, yshift=-7mm, anchor=north west] (labo) at (docspe.south west) {
        \begin{minipage}[h]{.4\paperwidth}
          \pslbluelabel{Pr\'{e}par\'{e}e au}
            \unskip\strut\par
            \vspace{1mm}
            \begin{flushleft} \unskip
            % {\fontsize{14}{17}\selectfont\textbf{\@laboratory{}}}
            {\fontsize{12}{15}\selectfont \@laboratory{}}
            \end{flushleft} 
        \end{minipage}
      };

      %% jury
      \node[fill=lightgray!10, xshift=-15mm, yshift=-6.5mm, anchor=north west] (compo) at (o3) {
        \begin{minipage}[h]{100mm}
          \vspace{2mm}
          {\hspace{1mm}\color{pslblue}\fontsize{12}{15}\selectfont Composition du jury :}

          \vspace{5mm}
          \hspace{-2mm}
          \fontsize{9}{11}\selectfont
          \begin{tabularx}{100mm}{p{70mm}p{30mm}}
            \psljurystylepresident{\@jiname}{\@jitt}%{\@jirole}
            \psljurystyle{\@jiiname}{\@jiitt}{\@jiirole}
            \psljurystyle{\@jiiiname}{\@jiiitt}{\@jiiirole}
            \psljurystyle{\@jivname}{\@jivtt}{\@jivrole}
            \psljurystyle{\@jvname}{\@jvtt}{\@jvrole}
            \psljurystyle{\@jviname}{\@jvitt}{\@jvirole}
            \psljurystyle{\@jviiname}{\@jviitt}{\@jviirole}
            \psljurystyle{\@jviiiname}{\@jviiitt}{\@jviiirole}
            \psljurystyle{\@jixname}{\@jixtt}{\@jixrole}
            \psljurystyle{\@jxname}{\@jxtt}{\@jxrole}
            \psljurystyle{\@jxiname}{\@jxitt}{\@jxirole}
            \psljurystyle{\@jxiiname}{\@jxiitt}{\@jxiirole}
          \end{tabularx}
          \vspace{0mm}
        \end{minipage}
      };

      %% PSL institute logo
       \node[xshift=0mm, yshift=-124mm] at (o) {
          \includegraphics[scale=.25]{\@pslassetspath/logo-institute.jpg}
       };

      %% other institute logo (cotutelle)
      \if@cotutelle
      \node[xshift=65mm, yshift=125mm] at (o) {
        \includegraphics[height=1.8cm]{\@logoinstitute}
      };
      \fi

    \end{tikzpicture}
  \end{pslfontenv}
  \clearpage
  \mbox{}
  \thispagestyle{empty}
  \clearpage
  \setcounter{page}{1}
}

%% Back PSL cover
\newcommand*{\pslbackcover}{
  \pagestyle{empty}
  \cleardoublepage{}
  \ifodd\value{page}\hbox{}\newpage\fi
  \begin{pslfontenv}
    \begin{tikzpicture}[overlay, remember picture, text centered, align=center]

      %% node origin
      \coordinate (o) at (current page.center);

      % background images (PSL logo and blue semi-circle)
      \node[on background layer, xshift=73mm, yshift=-94mm] at (current page.north west)
      {\includegraphics[scale=.75]{\@pslassetspath/back-bg.png}};
      \coordinate[xshift=-21mm] (circcenter) at (current page.south east);
      \filldraw[pslblue] (circcenter) circle(21mm);
      \coordinate[xshift=-56mm, yshift=.2mm] (gl0) at (current page.south east);
      \draw[darkgray, line width=.5mm] (gl0) -| (current page.south east);

      \fontsize{11}{13}\selectfont
      %% french keywords
      \node[yshift=0mm, above] (frKeywords) at (o) {
        \pslbacknode{MOTS CL\'{E}S}{\@frkeywords{}}{10}{12}
      };
      %% french abstract
      \node[yshift=2mm, above] at (frKeywords.north) {
        \pslbacknode{R\'{E}SUM\'{E}}{\@frabstract{}}{9}{11}
      };
      %% english abstract
      \node[yshift=-6mm, below] (enAbstract) at (o) { % old -10mm
        \pslbacknode{ABSTRACT}{\@enabstract{}}{9}{11}
      };
      %% english keywords
      \node[yshift=-2mm, below] at (enAbstract.south) {
        \pslbacknode{KEYWORDS}{\@enkeywords{}}{10}{12}
      };

    \end{tikzpicture}
  \end{pslfontenv}
}

